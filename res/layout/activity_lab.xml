<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#BB0C94F7" >
        
        <Button
            android:id="@+id/btn_backtohome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="#0C94F7"
            android:textSize="17sp"
            android:text="返回"
            android:textColor="@android:color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="实 验 功 能"
            android:textColor="@android:color/white"
            android:textSize="17sp" />
        
    </RelativeLayout>
    
    <View 
        android:layout_height="2px"
        android:layout_width="match_parent"
        android:background="#37A1EC"/>
    
	<com.baidu.mapapi.map.MapView
	    android:id="@+id/mapView"
        android:layout_height="195dp"
        android:layout_width="match_parent"
        android:onClick="true"
        android:background="#CCCCCC"/>

	<TextView
	    android:id="@+id/tv_userstate"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:textSize="16sp"
	    android:paddingTop="6dp"
	    android:onClick="true"
	    android:paddingBottom="6dp"
	    android:background="#4437A1EC"
	    android:textColor="#000000"
	    android:gravity="center"
	    android:text="N/A" />

	<ScrollView
	    android:id="@+id/scrollView1"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent" >

	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:orientation="vertical" >

	        <View 
		        android:layout_height="2px"
		        android:layout_width="match_parent"
		        android:layout_marginLeft="12dp"
		        android:layout_marginRight="12dp"
		        android:layout_marginTop="6dp"
		        android:background="#37A1EC"/>
	        
	        <TextView
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:gravity="center"
	            android:textColor="#37A1EC"
	            android:paddingTop="4dp"
	            android:paddingBottom="4dp"
	            android:textSize="17sp"
	            android:text="大数据报告" />
	        
	        <View 
		        android:layout_height="2px"
		        android:layout_width="match_parent"
		        android:layout_marginLeft="12dp"
		        android:layout_marginRight="12dp"
		        android:layout_marginBottom="6dp"
		        android:background="#37A1EC"/>
	        
	        <TextView
	            android:id="@+id/tv_bigdata"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:textColor="#000000"
	            android:paddingTop="4dp"
	            android:paddingBottom="4dp"
	            android:paddingLeft="13dp"
	            android:paddingRight="13dp"
	            android:textSize="15sp"
	            android:text="N/A (请先设置共享数据的城市和日期)" />
	        
	        <View 
		        android:layout_height="2px"
		        android:layout_width="match_parent"
		        android:layout_marginLeft="12dp"
		        android:layout_marginRight="12dp"
		        android:layout_marginTop="15dp"
		        android:background="#37A1EC"/>
	        
	        <TextView
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:gravity="center"
	            android:textColor="#37A1EC"
	            android:paddingTop="4dp"
	            android:paddingBottom="4dp"
	            android:textSize="17sp"
	            android:text="数据云端备份" />
	        
	        <View 
		        android:layout_height="2px"
		        android:layout_width="match_parent"
		        android:layout_marginLeft="12dp"
		        android:layout_marginRight="12dp"
		        android:layout_marginBottom="6dp"
		        android:background="#37A1EC"/>
	        
	        <TextView
		        android:id="@+id/tv_datepicker_internet"
		        android:clickable="true"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_alignParentTop="true"
		        android:layout_centerHorizontal="true"
		        android:textColor="#000000"
		        android:gravity="center_vertical|center_horizontal"
		        android:text="2017-05-04"
		        android:paddingTop="3dp"
		        android:paddingBottom="3dp"
		        android:paddingLeft="25dp"
		        android:paddingRight="25dp"
		        android:layout_marginTop="2dp"
		        android:layout_marginBottom="2dp"
		        android:layout_marginRight="5dp"
		        android:layout_marginLeft="5dp"
		        android:background="@drawable/ic_calendar"
				android:textSize="15sp" />

	        <LinearLayout
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content" 
	            android:orientation="horizontal">

	            <Button
	                android:id="@+id/btn_backup"
	                style="?android:attr/buttonStyleSmall"
	                android:layout_width="match_parent"
	                android:layout_weight="1"
	                android:layout_height="wrap_content"
	                android:text="数据备份" />

	            <Button
	                android:id="@+id/btn_recover"
	                style="?android:attr/buttonStyleSmall"
	                android:layout_width="match_parent"
	                android:layout_weight="1"
	                android:layout_height="wrap_content"
	                android:text="数据恢复" />

	        </LinearLayout>
	        
	        <View 
		        android:layout_height="2px"
		        android:layout_width="match_parent"
		        android:layout_marginLeft="12dp"
		        android:layout_marginRight="12dp"
		        android:layout_marginTop="15dp"
		        android:background="#37A1EC"/>
	        
	        <TextView
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:gravity="center"
	            android:textColor="#37A1EC"
	            android:paddingTop="4dp"
	            android:paddingBottom="4dp"
	            android:textSize="17sp"
	            android:text="大数据实验功能" />
	        
	        <View 
		        android:layout_height="2px"
		        android:layout_width="match_parent"
		        android:layout_marginLeft="12dp"
		        android:layout_marginRight="12dp"
		        android:layout_marginBottom="6dp"
		        android:background="#37A1EC"/>
	        
	        <LinearLayout
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:orientation="horizontal">
	        
		        <TextView
			        android:id="@+id/tv_city"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:background="@android:color/darker_gray"
			        android:textSize="14sp"
			        android:gravity="center_vertical|center_horizontal"
			        android:textColor="#000000"
			        android:layout_weight="0.6"
			        android:layout_marginLeft="10dp"
			        android:paddingTop="3dp"
			        android:paddingBottom="3dp"
			        android:layout_marginTop="2dp"
			        android:layout_marginBottom="2dp"
			        android:text="选择城市" />
		        
		         <TextView
			        android:id="@+id/tv_datepicker_bigdata"
			        android:clickable="true"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:layout_alignParentTop="true"
			        android:layout_centerHorizontal="true"
			        android:textColor="#000000"
			        android:gravity="center_vertical|center_horizontal"
			        android:text="2017-05-04"
			        android:paddingTop="3dp"
			        android:paddingBottom="3dp"
			        android:paddingRight="25dp"
			        android:layout_marginTop="2dp"
			        android:layout_marginBottom="2dp"
			        android:layout_marginRight="5dp"
			        android:layout_marginLeft="5dp"
			        android:layout_weight="0.4"
			        android:background="@drawable/ic_calendar"
					android:textSize="15sp" />
	         
	         </LinearLayout>
	         
	         <LinearLayout
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content" 
	            android:orientation="horizontal">

	            <Button
	                android:id="@+id/btn_bigdata"
	                style="?android:attr/buttonStyleSmall"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:layout_marginBottom="10dp"
	                android:text="查看共享数据并生成报告" />

	        </LinearLayout>
	        
	        <TextView 
	            android:layout_marginTop="6dp"
	            android:layout_marginBottom="6dp"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:textSize="14sp"
	            android:textColor="#000000"
	            android:paddingLeft="10dp"
	            android:paddingRight="10dp"
	            android:text="您一旦使用大数据功能，就表明您已经同意共享自己的数据供他人查看，并同意保护他人数据不用于商业和非法用途。\n大数据支持精度达到每标记点周围77.777m，在同一范围内用户上传的数据均会被视为同一地点"/>

	    </LinearLayout>
	</ScrollView>
	
</LinearLayout>
